<header class="site-header">
    <div class="wrap">
    <h1>Trap the Dot !</h1>
    </div>
</header>
<div class="page-content">
    <div class="wrap">
        <%= markdown @content %>

        <h4>Feedbacks</h4>
        <div>
            <%= form_for :comment, url: {action: "comment_new" } do |f| %>
              <p>
                <%= f.label :email, "Your Email" %><br>
                <%= f.text_field :email %>
              </p>
              <p>
                <%= f.label :title %><br>
                <%= f.text_field :title %>
              </p>
             
              <p>
                <%= f.label :text %><br>
                <%= f.text_area :text %>
              </p>
             
              <p>
                <%= f.submit "Submit" %>
              </p>
            <% end %>
        </div>
    </div>
</div>
